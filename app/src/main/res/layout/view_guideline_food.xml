<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/rv_item_img_width"
    android:layout_height="@dimen/rv_item_img_width"
    android:layout_marginStart="@dimen/margin_medium_2">

    <ImageView
        android:id="@+id/iv_guideline_food"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_maxican_food"
        android:scaleType="centerCrop"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/trans_view"
        android:layout_alignParentTop="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:id="@+id/iv_guidline_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_local_cafe_24dp"/>

        <ImageView
            android:id="@+id/iv_burpple_icon"
            android:layout_width="@dimen/margin_large"
            android:layout_height="@dimen/margin_large"
            android:layout_below="@id/iv_guidline_icon"
            android:src="@drawable/food_icon" />

        <TextView
            android:id="@+id/tv_burpple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_main_label"
            android:layout_below="@id/iv_guidline_icon"
            android:layout_toRightOf="@id/iv_burpple_icon"
            android:textColor="@color/white_full"
            android:shadowColor="@color/black_full"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"/>

    </RelativeLayout>

</RelativeLayout>